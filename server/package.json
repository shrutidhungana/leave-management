{
  "name": "leave-management-server",
  "version": "1.0.0",
  "description": "Leave management system backend with Hono, GraphQL, Drizzle, PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "db:push": " drizzle-kit push --config ./src/db/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config ./src/db/drizzle.config.ts",
    "db:pull": "drizzle-kit pull --config ./src/db/drizzle.config.ts",
    "db:generate": "drizzle-kit generate --config ./src/db/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./src/db/drizzle.config.ts"
  },
  "keywords": [
    "hono",
    "graphql",
    "typescript",
    "drizzle",
    "postgresql"
  ],
  "author": "Shruti Dhungana",
  "license": "ISC",
  "packageManager": "pnpm@10.23.0",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^8.55.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@trpc/server": "^11.7.2",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.4.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "graphql": "^16.12.0",
    "graphql-yoga": "^5.17.0",
    "hono": "^4.10.7",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  }
}
